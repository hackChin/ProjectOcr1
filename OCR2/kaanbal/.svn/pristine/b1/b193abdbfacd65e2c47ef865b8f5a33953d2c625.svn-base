<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.proyectos.efrain.ocr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.0" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/splash"
        android:label="@string/app_name"
        android:roundIcon="@drawable/splash"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.proyectos.efrain.ocr.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.proyectos.efrain.ocr.CapturarDatos"
            android:label="@string/back"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.proyectos.efrain.ocr.SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.proyectos.efrain.ocr.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.proyectos.efrain.ocr.Splash"
            android:theme="@style/splashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.proyectos.efrain.ocr.Calendario"
            android:label="@string/back"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.proyectos.efrain.ocr.Grupos"
            android:label="@string/back"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.proyectos.efrain.ocr.Reportes"
            android:label="@string/back"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.proyectos.efrain.ocr.RegistroDatos"
            android:label="@string/back"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>